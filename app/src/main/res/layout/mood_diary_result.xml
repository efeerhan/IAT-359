<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg"
    tools:ignore="HardcodedText"
    tools:context=".MoodDiaryResultActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="353dp"
            android:gravity="center"
            android:orientation="vertical"
            android:background="@drawable/top_bg_drawable" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="start"
                android:layout_marginTop="80dp"
                android:text="Mood Diary"
                android:fontFamily="@font/visbyroundcf_bold"
                android:textColor="@color/white"
                android:layout_marginStart="40dp"
                android:textSize="30sp"/>


            <LinearLayout
                android:id="@+id/calendar2"
                android:layout_width="350dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="24dp"
                android:layout_marginTop="16dp"
                android:layout_marginEnd="24dp"
                android:elevation="1dp"
                android:orientation="horizontal"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:baselineAligned="false">

                <LinearLayout
                    android:id="@+id/rDay01"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:paddingVertical="8dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/visbyroundcf_medium"
                        android:text="M"
                        android:textAlignment="center"
                        android:textColor="@color/white"
                        android:textSize="14sp" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:fontFamily="@font/visbyroundcf_demibold"
                        android:text="15"
                        android:textAlignment="center"
                        android:textColor="@color/white"
                        android:textSize="18sp" />

                    <ImageView
                        android:layout_width="28dp"
                        android:layout_height="28dp"
                        android:layout_gravity="center"
                        android:layout_marginTop="8dp"
                        app:srcCompat="@drawable/icon_checked" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/rDay02"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:paddingVertical="8dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/visbyroundcf_medium"
                        android:text="T"
                        android:textAlignment="center"
                        android:textColor="@color/white"
                        android:textSize="14sp" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:fontFamily="@font/visbyroundcf_demibold"
                        android:text="16"
                        android:textAlignment="center"
                        android:textColor="@color/white"
                        android:textSize="18sp" />

                    <ImageView
                        android:layout_width="28dp"
                        android:layout_height="28dp"
                        android:layout_gravity="center"
                        android:layout_marginTop="8dp"
                        app:srcCompat="@drawable/icon_checked" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/rDay03"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:paddingVertical="8dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/visbyroundcf_medium"
                        android:text="W"
                        android:textAlignment="center"
                        android:textColor="@color/white"
                        android:textSize="14sp" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:fontFamily="@font/visbyroundcf_demibold"
                        android:text="17"
                        android:textAlignment="center"
                        android:textColor="@color/white"
                        android:textSize="18sp" />

                    <ImageView
                        android:layout_width="28dp"
                        android:layout_height="28dp"
                        android:layout_gravity="center"
                        android:layout_marginTop="8dp"
                        android:visibility="invisible"
                        app:srcCompat="@drawable/icon_checked" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/rDay04"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:paddingVertical="8dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/visbyroundcf_medium"
                        android:text="T"
                        android:textAlignment="center"
                        android:textColor="@color/white"
                        android:textSize="14sp" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:fontFamily="@font/visbyroundcf_demibold"
                        android:text="18"
                        android:textAlignment="center"
                        android:textColor="@color/white"
                        android:textSize="18sp" />

                    <ImageView
                        android:layout_width="28dp"
                        android:layout_height="28dp"
                        android:layout_gravity="center"
                        android:layout_marginTop="8dp"
                        android:visibility="invisible"
                        app:srcCompat="@drawable/icon_checked" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/rDay05"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:paddingVertical="8dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/visbyroundcf_medium"
                        android:text="F"
                        android:textAlignment="center"
                        android:textColor="@color/white"
                        android:textSize="14sp" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:fontFamily="@font/visbyroundcf_demibold"
                        android:text="19"
                        android:textAlignment="center"
                        android:textColor="@color/white"
                        android:textSize="18sp" />

                    <ImageView
                        android:layout_width="28dp"
                        android:layout_height="28dp"
                        android:layout_gravity="center"
                        android:layout_marginTop="8dp"
                        android:visibility="invisible"
                        app:srcCompat="@drawable/icon_checked" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/rDay06"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:paddingVertical="8dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/visbyroundcf_medium"
                        android:text="S"
                        android:textAlignment="center"
                        android:textColor="@color/white"
                        android:textSize="14sp" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:fontFamily="@font/visbyroundcf_demibold"
                        android:text="20"
                        android:textAlignment="center"
                        android:textColor="@color/white"
                        android:textSize="18sp" />

                    <ImageView
                        android:layout_width="28dp"
                        android:layout_height="28dp"
                        android:layout_gravity="center"
                        android:layout_marginTop="8dp"
                        android:visibility="invisible"
                        app:srcCompat="@drawable/icon_checked" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/rDay07"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:paddingVertical="8dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/visbyroundcf_medium"
                        android:text="S"
                        android:textAlignment="center"
                        android:textColor="@color/white"
                        android:textSize="14sp" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:fontFamily="@font/visbyroundcf_demibold"
                        android:text="21"
                        android:textAlignment="center"
                        android:textColor="@color/white"
                        android:textSize="18sp" />

                    <ImageView
                        android:layout_width="28dp"
                        android:layout_height="28dp"
                        android:layout_gravity="center"
                        android:layout_marginTop="8dp"
                        android:visibility="invisible"
                        app:srcCompat="@drawable/icon_checked" />
                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="380dp"
            android:gravity="center"
            android:orientation="horizontal">

            <LinearLayout
                android:id="@+id/top3_moods"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="24dp"
                android:layout_marginEnd="24dp"
                android:orientation="vertical"
                app:layout_constraintEnd_toStartOf="@+id/resultCard"
                app:layout_constraintStart_toStartOf="parent">

                <androidx.cardview.widget.CardView
                    android:id="@+id/first"
                    android:layout_width="130dp"
                    android:layout_height="130dp"
                    android:layout_marginStart="1dp"
                    android:layout_marginTop="10dp"
                    app:cardElevation="1dp"
                    app:cardCornerRadius="65dp">

                    <LinearLayout
                        android:id="@+id/first_content"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:orientation="vertical">

                        <ImageView
                            android:id="@+id/img_1"
                            android:layout_width="100dp"
                            android:layout_height="95dp"
                            android:scaleType="fitCenter"
                            app:srcCompat="@drawable/mood_happy" />

                        <LinearLayout
                            android:layout_width="100dp"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:layout_gravity="center"
                            android:orientation="horizontal">

                            <TextView
                                android:id="@+id/mood_1"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/visbyroundcf_medium"
                                android:text="Happy"
                                android:textAlignment="center"
                                android:textColor="@color/dark_purple"
                                android:textSize="18sp" />

                        </LinearLayout>

                    </LinearLayout>
                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:id="@+id/second"
                    android:layout_width="115dp"
                    android:layout_height="115dp"
                    android:layout_gravity="right"
                    app:cardElevation="1dp"
                    app:cardCornerRadius="57dp">

                    <LinearLayout
                        android:id="@+id/second_content"
                        android:layout_width="match_parent"
                        android:layout_height="110dp"
                        android:elevation="5dp"
                        android:layout_gravity="center"
                        android:layout_marginBottom="8dp"
                        android:gravity="center"
                        android:orientation="vertical">

                        <ImageView
                            android:id="@+id/img_2"
                            android:layout_width="85dp"
                            android:layout_height="80dp"
                            app:srcCompat="@drawable/mood_exhausted" />

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:orientation="horizontal">

                            <TextView
                                android:id="@+id/mood_2"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/visbyroundcf_medium"
                                android:text="Exhausted"
                                android:textAlignment="center"
                                android:textColor="@color/dark_purple"
                                android:textSize="12sp" />

                        </LinearLayout>

                    </LinearLayout>

                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:id="@+id/third"
                    android:layout_width="95dp"
                    android:layout_height="95dp"
                    android:layout_gravity="center"
                    android:layout_marginRight="30dp"
                    android:layout_marginBottom="5dp"
                    app:cardCornerRadius="48dp">

                    <LinearLayout
                        android:id="@+id/third_content"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:orientation="vertical">

                        <ImageView
                            android:id="@+id/img_3"
                            android:layout_width="90dp"
                            android:layout_height="70dp"
                            android:scaleType="fitCenter"
                            app:srcCompat="@drawable/mood_crying" />

                        <LinearLayout
                            android:layout_width="90dp"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:orientation="horizontal">

                            <TextView
                                android:id="@+id/mood_3"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/visbyroundcf_medium"
                                android:text="Crying"
                                android:textAlignment="center"
                                android:textColor="@color/dark_purple"
                                android:textSize="12sp" />

                        </LinearLayout>

                    </LinearLayout>

                </androidx.cardview.widget.CardView>

            </LinearLayout>

                <LinearLayout
                    android:id="@+id/timePeriod"
                    android:layout_width="130dp"
                    android:layout_height="wrap_content"
                    android:background="@drawable/rounded_card_white"
                    android:layout_marginRight="10dp"
                    android:elevation="2dp"
                    android:gravity="center_horizontal"
                    android:orientation="vertical"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/resultCard">

                    <LinearLayout
                        android:layout_width="120dp"
                        android:layout_height="30dp"
                        android:orientation="horizontal"
                        android:layout_marginVertical="20dp"
                        android:background="@drawable/primary_time_label"
                        android:gravity="center">

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/triangle_arrow_left"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/visbyround"
                            android:layout_gravity="center"
                            android:textAlignment="center"
                            android:layout_marginHorizontal="10dp"
                            android:textColor="@color/white"
                            android:text="AUG"/>

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/triangle_arrow_right"/>
                    </LinearLayout>

                    <TextView
                        android:id="@+id/month"
                        android:layout_width="120dp"
                        android:layout_height="wrap_content"
                        android:background="@drawable/primary_time_label"
                        android:fontFamily="@font/visbyroundcf_bold"
                        android:paddingVertical="8dp"
                        android:text="Month"
                        android:textAlignment="center"
                        android:textColor="@color/white"
                        android:textSize="14sp" />

                    <TextView
                        android:id="@+id/year"
                        android:layout_width="120dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="16dp"
                        android:background="@drawable/secondary_time_label"
                        android:fontFamily="@font/visbyroundcf_medium"
                        android:paddingVertical="8dp"
                        android:text="Year"
                        android:textAlignment="center"
                        android:textColor="@color/dark_purple"
                        android:textSize="14sp" />

                    <TextView
                        android:id="@+id/all"
                        android:layout_width="120dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="16dp"
                        android:background="@drawable/secondary_time_label"
                        android:fontFamily="@font/visbyroundcf_medium"
                        android:paddingVertical="8dp"
                        android:layout_marginVertical="20dp"
                        android:text="All"
                        android:textAlignment="center"
                        android:textColor="@color/dark_purple"
                        android:textSize="14sp" />

                </LinearLayout>

        </LinearLayout>

    </LinearLayout>

    <ImageButton
        android:id="@+id/backButtonDiary2"
        android:layout_width="44dp"
        android:elevation="1dp"
        android:layout_height="44dp"
        android:layout_marginStart="44dp"
        android:layout_marginTop="52dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:background="@drawable/back_button_background"
        app:srcCompat="@drawable/icon_exit_vector" />

</androidx.constraintlayout.widget.ConstraintLayout>