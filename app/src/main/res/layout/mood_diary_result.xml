<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg"
    tools:context=".mood_diary_result">

    <ImageView
        android:id="@+id/imageView6"
        android:layout_width="match_parent"
        android:layout_height="318dp"
        android:scaleType="fitXY"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/top_bg" />

    <ImageView
        android:id="@+id/exit"
        android:layout_width="44dp"
        android:layout_height="44dp"
        android:layout_marginStart="24dp"
        android:layout_marginTop="56dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/icon_exit" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginTop="40dp"
        android:fontFamily="@font/visbyroundcf_bold"
        android:text="Mood Diary"
        android:textColor="@color/white"
        android:textSize="28sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/exit" />

    <LinearLayout
        android:id="@+id/timePeriod"
        android:layout_width="114dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:layout_marginEnd="24dp"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/resultCard">

        <TextView
            android:id="@+id/month"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="0dp"
            android:background="@drawable/primary_time_label"
            android:fontFamily="@font/visbyroundcf_bold"
            android:paddingVertical="8dp"
            android:text="Month"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/year"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:background="@drawable/secondary_time_label"
            android:fontFamily="@font/visbyroundcf_medium"
            android:paddingVertical="8dp"
            android:text="Year"
            android:textAlignment="center"
            android:textColor="@color/dark_purple"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/all"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:background="@drawable/secondary_time_label"
            android:fontFamily="@font/visbyroundcf_medium"
            android:paddingVertical="8dp"
            android:text="All"
            android:textAlignment="center"
            android:textColor="@color/dark_purple"
            android:textSize="14sp" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/resultCard"
        android:layout_width="114dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:layout_marginEnd="24dp"
        android:background="@drawable/primary_time_label"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView6">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="12dp"
            android:layout_marginVertical="16dp"
            android:fontFamily="@font/visbyroundcf_demibold"
            android:text="You were feeling"
            android:textColor="@color/white"
            android:textSize="12sp" />

        <ImageView
            android:id="@+id/emoji"
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:layout_marginHorizontal="12dp"
            android:scaleType="fitCenter"
            app:srcCompat="@drawable/emoji_positively" />

        <TextView
            android:id="@+id/result"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/caveat_bold"
            android:text="Positively"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:textSize="24sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="8dp"
            android:layout_marginBottom="12dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/last"
                android:layout_width="8dp"
                android:layout_height="match_parent"
                android:layout_weight="0"
                app:srcCompat="@drawable/triangle_arrow_left" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginHorizontal="10dp"
                android:layout_weight="1"
                android:background="@drawable/white_background_16radius"
                android:fontFamily="@font/visbyroundcf_demibold"
                android:gravity="center"
                android:paddingHorizontal="8dp"
                android:paddingVertical="4dp"
                android:text="AUG 2021"
                android:textAlignment="center"
                android:textColor="@color/purple_100"
                android:textSize="10sp" />

            <ImageView
                android:id="@+id/next"
                android:layout_width="8dp"
                android:layout_height="match_parent"
                android:layout_weight="0"
                app:srcCompat="@drawable/triangle_arrow_right" />
        </LinearLayout>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>