<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg"
    tools:context=".mood_diary_result">

    <ImageView
        android:id="@+id/imageView6"
        android:layout_width="match_parent"
        android:layout_height="318dp"
        android:scaleType="fitXY"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/top_bg" />

    <ImageView
        android:id="@+id/exit"
        android:layout_width="44dp"
        android:layout_height="44dp"
        android:layout_marginStart="24dp"
        android:layout_marginTop="56dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/icon_exit" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginTop="40dp"
        android:fontFamily="@font/visbyroundcf_bold"
        android:text="Mood Diary"
        android:textColor="@color/white"
        android:textSize="28sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/exit" />

    <LinearLayout
        android:id="@+id/timePeriod"
        android:layout_width="114dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:layout_marginEnd="24dp"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/resultCard">

        <TextView
            android:id="@+id/month"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="0dp"
            android:background="@drawable/primary_time_label"
            android:fontFamily="@font/visbyroundcf_bold"
            android:paddingVertical="8dp"
            android:text="Month"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/year"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:background="@drawable/secondary_time_label"
            android:fontFamily="@font/visbyroundcf_medium"
            android:paddingVertical="8dp"
            android:text="Year"
            android:textAlignment="center"
            android:textColor="@color/dark_purple"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/all"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:background="@drawable/secondary_time_label"
            android:fontFamily="@font/visbyroundcf_medium"
            android:paddingVertical="8dp"
            android:text="All"
            android:textAlignment="center"
            android:textColor="@color/dark_purple"
            android:textSize="14sp" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/resultCard"
        android:layout_width="114dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:layout_marginEnd="24dp"
        android:background="@drawable/primary_time_label"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView6">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="12dp"
            android:layout_marginVertical="16dp"
            android:fontFamily="@font/visbyroundcf_demibold"
            android:text="You were feeling"
            android:textColor="@color/white"
            android:textSize="12sp" />

        <ImageView
            android:id="@+id/emoji"
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:layout_marginHorizontal="12dp"
            android:scaleType="fitCenter"
            app:srcCompat="@drawable/emoji_positively" />

        <TextView
            android:id="@+id/result"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/caveat_bold"
            android:text="Positively"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:textSize="24sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="8dp"
            android:layout_marginBottom="12dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/last"
                android:layout_width="8dp"
                android:layout_height="match_parent"
                android:layout_weight="0"
                app:srcCompat="@drawable/triangle_arrow_left" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginHorizontal="10dp"
                android:layout_weight="1"
                android:background="@drawable/white_background_16radius"
                android:fontFamily="@font/visbyroundcf_demibold"
                android:gravity="center"
                android:paddingHorizontal="8dp"
                android:paddingVertical="4dp"
                android:text="AUG 2021"
                android:textAlignment="center"
                android:textColor="@color/purple_100"
                android:textSize="10sp" />

            <ImageView
                android:id="@+id/next"
                android:layout_width="8dp"
                android:layout_height="match_parent"
                android:layout_weight="0"
                app:srcCompat="@drawable/triangle_arrow_right" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/top3_moods"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginTop="40dp"
        android:layout_marginEnd="24dp"
        android:orientation="vertical"
        app:layout_constraintEnd_toStartOf="@+id/resultCard"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView6">

        <FrameLayout
            android:id="@+id/first"
            android:layout_width="match_parent"
            android:layout_height="145dp">

            <ImageView
                android:layout_width="180dp"
                android:layout_height="180dp"
                android:scaleType="fitStart"
                app:srcCompat="@drawable/circle_base" />

            <LinearLayout
                android:id="@+id/first_content"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="28dp"
                android:layout_marginTop="12dp"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/img_1"
                    android:layout_width="120dp"
                    android:layout_height="110dp"
                    android:scaleType="fitCenter"
                    app:srcCompat="@drawable/mood_happy" />

                <LinearLayout
                    android:layout_width="120dp"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/mood_1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/visbyroundcf_medium"
                        android:text="Happy"
                        android:textAlignment="center"
                        android:textColor="@color/dark_purple"
                        android:textSize="18sp" />

                    <TextView
                        android:id="@+id/number_1"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:fontFamily="@font/visbyroundcf_demibold"
                        android:gravity="top|left"
                        android:paddingLeft="4dp"
                        android:text="+4"
                        android:textColor="@color/purple_100"
                        android:textSize="16sp" />

                </LinearLayout>

            </LinearLayout>
        </FrameLayout>

        <FrameLayout
            android:id="@+id/second"
            android:layout_width="match_parent"
            android:layout_height="130dp"
            android:layout_marginTop="8dp">

            <ImageView
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:layout_gravity="right"
                android:scaleType="fitEnd"
                app:srcCompat="@drawable/circle_base" />

            <LinearLayout
                android:id="@+id/second_content"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:layout_marginTop="12dp"
                android:layout_marginRight="22dp"
                android:gravity="right"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/img_2"
                    android:layout_width="110dp"
                    android:layout_height="90dp"
                    android:scaleType="fitCenter"
                    app:srcCompat="@drawable/mood_exhausted" />

                <LinearLayout
                    android:layout_width="110dp"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/mood_2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/visbyroundcf_medium"
                        android:text="Exhausted"
                        android:textAlignment="center"
                        android:textColor="@color/dark_purple"
                        android:textSize="12sp" />

                    <TextView
                        android:id="@+id/number_2"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:fontFamily="@font/visbyroundcf_demibold"
                        android:gravity="top|left"
                        android:paddingLeft="4dp"
                        android:text="+2"
                        android:textColor="@color/purple_100"
                        android:textSize="10sp" />

                </LinearLayout>

            </LinearLayout>
        </FrameLayout>

        <FrameLayout
            android:id="@+id/third"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_marginTop="8dp">

            <ImageView
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:scaleType="fitStart"
                app:srcCompat="@drawable/circle_base" />

            <LinearLayout
                android:id="@+id/third_content"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="16dp"
                android:layout_marginTop="12dp"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/img_3"
                    android:layout_width="90dp"
                    android:layout_height="70dp"
                    android:scaleType="fitCenter"
                    app:srcCompat="@drawable/mood_crying" />

                <LinearLayout
                    android:layout_width="90dp"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/mood_3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/visbyroundcf_medium"
                        android:text="Crying"
                        android:textAlignment="center"
                        android:textColor="@color/dark_purple"
                        android:textSize="12sp" />

                    <TextView
                        android:id="@+id/number_3"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:fontFamily="@font/visbyroundcf_demibold"
                        android:gravity="top|left"
                        android:paddingLeft="4dp"
                        android:text="+1"
                        android:textColor="@color/purple_100"
                        android:textSize="10sp" />

                </LinearLayout>

            </LinearLayout>

        </FrameLayout>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>